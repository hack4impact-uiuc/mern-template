{
  "name": "mern-template-api",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production ?? npm run start:prod || npm run start:dev",
    "start:prod": "node -r dotenv/config ./bin/www",
    "start:dev": "nodemon -r dotenv/config ./bin/www",
    "lint": "eslint --fix src -c .eslintrc.json --ext js",
    "format": "prettier --write \"./**/*.{js,jsx,json,md}\"",
    "format:check": "prettier --check \"./**/*.{js,jsx,json,md}\"",
    "test": "jest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "helmet": "^3.21.1",
    "http-errors": "~1.6.3",
    "if-env": "^1.0.4",
    "isomorphic-unfetch": "^3.0.0",
    "mongodb": "^3.3.2",
    "mongoose": "^5.7.5",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "dotenv-cli": "^2.0.1",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^25.1.0",
    "nodemon": "^2.0.6",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  }
}
